<div class="container form-page">
	<div class="row"><div class="col-md-6 col-md-offset-3">

	<h2>Welcome back to Babel Mail</h2>
	<h5>We missed you!</h5>

	<div class="form-box">


		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  
		  <div><%= f.label :email %><br />
		  <%= f.email_field :email, :autofocus => true, :class => "form-control" %></div>

		  <div><%= f.label :password %><br />
		  <%= f.password_field :password, :class => "form-control" %></div>

		  <!--div><%= f.label :remember_me %><%= f.check_box :remember_me %></div-->

		  <div><%= f.submit "Sign in", :class=>"btn btn-info btn-block" %></div>
		 
		<% end %>

		<%= render "devise/shared/links" %>

	</div>
	
	</div></div>
</div>